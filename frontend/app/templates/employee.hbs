<h1>{{model.fullName}}</h1>

<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <img src={{model.image}}>
      <div class="caption">
        <h3>{{model.fullName}}</h3>
        <p>{{markdown-to-html model.bio}}</p>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      {{#filter-panel}}
        {{#if language}}
          {{text-chip text=language action=(action "resetLanguage")}}
        {{/if}}
        <ul>
          {{#each model.languages as |language| }}
          <li>
            {{#link-to 'employee' (query-params language=language.name)}}{{language.name}}{{/link-to}}
          </li>
          {{/each}}
        </ul>
      {{/filter-panel}}
    </div>
    <div class="row">
      <ul>
        {{#each filteredSkills as |skill| }}
        <li>{{skill.technology}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

