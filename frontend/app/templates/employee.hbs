<h1>{{model.fullName}}</h1>

<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <img src={{model.image}}>
      <div class="caption">
        <h3>{{model.fullName}}</h3>
        <p>{{markdown-to-html model.bio}}</p>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      {{#filter-panel as |isExpanded|}}
        {{#if language}}
          {{text-chip text=language action=(action "resetLanguage")}}
        {{/if}}
        {{#if discipline}}
          {{text-chip text=discipline action=(action "resetDiscipline")}}
        {{/if}}
        {{#filter-panel-content isVisible=isExpanded}}
          <div class="col-md-3">
            <ul class="list-group">
              <li class="list-group-item"><h4>Languages</h4></li>
              {{#each model.languages as |language| }}
              <li class="list-group-item">
                {{#link-to 'employee' (query-params language=language.name)}}{{language.name}}{{/link-to}}
              </li>
              {{/each}}
            </ul>
          </div>
          <div class="col-md-3">
            <ul class="list-group">
              <li class="list-group-item"><h4>Disciplines</h4></li>
              {{#each model.disciplines as |discipline| }}
              <li class="list-group-item">
                {{#link-to 'employee' (query-params discipline=discipline.name)}}{{discipline.name}}{{/link-to}}
              </li>
              {{/each}}
            </ul>
          </div>
          <div class="col-md-3">

          </div>
          <div class="col-md-3">

          </div>
        {{/filter-panel-content}}
      {{/filter-panel}}
    </div>
    <div class="row">
      <ul>
        {{#each filteredSkills as |skill| }}
        <li>{{skill.technology}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

